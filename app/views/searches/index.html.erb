<div class="container-fluid">
  <div class='row'>
    <div class='column'>
      <h2 class='text-center'>ATS Logistics Container Tracking System</h1>
    </div>
  </div>
  <div class='row'>
    <div class='column well col-md-4 col-md-offset-4'>

      <div class='container_form'>
        <%= form_tag(searches_search_path, method: "get") do %>
          <p class='text-center'>
            <%= label_tag(:container_planned, "Enter your container number") %>
            <br>
            <%= text_field_tag(:container_planned) %>
            <br>
            <% if flash.alert %>
              <div class="alert alert-danger text-center text-bold" role="alert">
                <p id="alert"><%= alert %></p>
              </div>
            <% end %>


          </p>
          <br>
          <p class='text-center'>
            <%= submit_tag("Track my container!", name: nil) %>
          </p>
        <% end %>
        <br>

        <p class='text-center'><%= link_to 'Back to Home', 'http://atsinc.net' %></p>
      </div>
    </div>
  </div>
</div>



